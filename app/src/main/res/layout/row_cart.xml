<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/mainrel">


        <ImageView
            android:layout_width="140dp"
            android:layout_height="250dp"
            android:src="@drawable/ic_place_holder_catalog"
            android:background="@drawable/catalog_card_background"
            android:scaleType="centerCrop"
            android:id="@+id/cart_view_image"/>


        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:layout_toRightOf="@id/cart_view_image"
            android:id="@+id/cart_info_rel">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Banarasi Silksqcwai lkdajsljxald ijka"
                android:maxLines="2"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:fontFamily="@font/hoefler_bold"
                android:textSize="18dp"
                android:id="@+id/catalog_name_text"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Silk with jaalar oailcjadklnlasj;aoilfejawilkcijc akl"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:fontFamily="@font/hoefler_regular"
                android:layout_marginTop="6dp"
                android:textSize="18dp"
                android:id="@+id/fabric_text"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6.30 m"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:fontFamily="@font/hoefler_regular"
                android:layout_marginTop="6dp"
                android:textSize="18dp"
                android:id="@+id/length_text"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Box Packaging (8 x 1)"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:fontFamily="@font/hoefler_regular"
                android:layout_marginTop="6dp"
                android:textSize="18dp"
                android:id="@+id/packing_text"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/price_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: â‚¹ "
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/hoefler_regular"
                    android:layout_marginTop="6dp"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6 x 300"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/hoefler_regular"
                    android:layout_marginTop="6dp"
                    android:textSize="18dp"
                    android:id="@+id/price_text"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/quantity_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity:  "
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/hoefler_regular"
                    android:layout_marginTop="6dp"
                    android:textSize="18dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/spd_medium"
                    android:textAlignment="center"
                    android:inputType="phone"
                    android:minWidth="42dp"
                    android:background="@drawable/edittext_borders_qty"
                    android:layout_marginTop="6dp"
                    android:textSize="18dp"
                    android:text="1"
                    android:id="@+id/et_quantity"/>



            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/cart_info_rel"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_delete"
            android:padding="5dp"
            android:id="@+id/delete_image"
            />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGrey"
        android:layout_margin="16dp"
        android:layout_below="@id/mainrel"/>

</RelativeLayout>