<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/dark_designer_background">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="Welcome"
        android:textColor="@color/white"
        android:fontFamily="@font/bodoni"
        android:textSize="30dp"
        android:id="@+id/welcome_text"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_below="@id/welcome_text"
        android:text="@string/company_name"
        android:textColor="@color/white"
        android:fontFamily="@font/bodoni"
        android:textSize="36dp"
        android:id="@+id/company_name_text"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:layout_marginHorizontal="36dp"
        android:layout_below="@id/company_name_text"
        android:text="Add Your Favorites To Cart"
        android:textColor="@color/white"
        android:fontFamily="@font/hoefler_regular"
        android:textSize="30dp"
        android:id="@+id/desc_text"/>




    <ImageView
        android:layout_width="234dp"
        android:layout_height="428dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/onboarding2"/>



</RelativeLayout>